@model Connectify.ViewModels.VerifyOtpViewModel
@{
    ViewData["Title"] = "Verify Account";
}

<h2>Verify Your Account</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

        <p>Please enter the 6-digit code sent to <strong>@Model.Email</strong>.</p>

        <form asp-action="VerifyOtp" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- This hidden field is very important! -->
            <input type="hidden" asp-for="Email" />

            <div class="form-group mb-2">
                <label asp-for="OtpCode" class="control-label"></label>
                <input asp-for="OtpCode" class="form-control" autofocus />
                <span asp-validation-for="OtpCode" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Verify" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}