@model Connectify.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="auth-container">
    <div class="card auth-card">

        <!-- Heading -->
        <h2>Welcome Back!</h2>

        <!-- Login Form -->
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Full-width button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
        </form>

        <!-- Link to Register Page -->
        <div class="text-center mt-4">
            <p class="text-muted">Don't have an account? <a asp-controller="Account" asp-action="Register">Sign up</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}